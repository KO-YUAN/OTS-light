{
  "hosting": {
    "site": "opportunesoft",
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/zh-TW",
        "destination": "/zh-TW.html"
      },
      {
        "source": "/hi-IN",
        "destination": "/hi-IN.html"
      },
      {
        "source": "/en-US",
        "destination": "/en-US.html"
      }
    ]
  }
}

